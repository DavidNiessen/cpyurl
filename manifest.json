{
  "manifest_version": 3,
  "name": "cpyurl",
  "homepage_url": "https://skillcode.dev",
  "version": "0.0.1",
  "description": "Simple chrome extension that allows you to copy the current tab url into your clipboard.",
  "permissions": ["tabs", "activeTab", "scripting", "clipboardWrite"],
  "commands": {
    "copy-url": {
      "suggested_key": {
        "windows": "Alt+C",
        "mac": "MacCtrl+C",
        "linux": "Alt+C",
        "chromeos": "Alt+C"
      },
      "description": "Copies the current url into your clipboard"
    }
  },
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  }
}
